  "version": "1.0.0",
  "description": "Book tickets for your favorite movies, shows, dramas and anime online on BookMyShow",
  "main": "index.js",
  "scripts": {
    "build": "rimraf build && tsc",
    "start": "node --env-file .env build/App.js",
